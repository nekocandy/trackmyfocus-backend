{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "pretty": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "plugins": [],
    "types": ["node", "./node_modules/@types/**/*"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
